@using Bulky_Models
<!-- this is the action (index) view for controller-->
<!-- here the model takes the data from controller return type-->
@model List<Product>

@* <partial name="_NotificationPartial"/> *@
@{
	ViewData["Title"] = "Product List";
}
<div class="card shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white p-0">Product List</h2>
			</div>
		</div>
	</div>

	<div class="card-body p-4">
		<div class="container">
			<div class=" row  pb-3">
				<div class="col-6">
					
				</div>
				<div class="col-6 text-end">
					<a asp-controller="Product" asp-action="Create" class="btn btn-primary">
						<i class="bi bi-patch-plus"></i> Create New Product
					</a>

				</div>

			</div>
			<table class="table table-bordered table-striped">
				<thead>
					<tr>
						<th>Title</th>
						<th>ISBN</th>
						<th>Price</th>
						<th>Author</th>
						<th>Category</th>
						<th>Operations</th>

					</tr>
				</thead>
				<tbody>
					<!-- we can c# code here
						model is written like Model refers to the same thing
					-->
					@foreach (var obj in Model)
					{
						<tr>
							<td>@obj.Title</td>
							<td>@obj.ISBN</td>
							<td>@obj.ListPrice</td>
							<td>@obj.Author</td>
							<td></td>
							<td>
								<div class="btn-group w-75" role="group">
									<a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
										<i class="bi bi-pencil-square"></i> Edit
									</a>
									<a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
										<i class="bi bi-trash-fill"></i> Delete
									</a>
								</div>
							</td>
						</tr>
					}
				</tbody>

			</table>
		</div>
	</div>
</div>



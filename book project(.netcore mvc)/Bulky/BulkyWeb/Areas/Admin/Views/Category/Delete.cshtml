@using Bulky_Models
@{
    ViewData["Title"] = " Delete Category";
}

<!--header and footer are present in _Layout.cshtml -->
@model Category
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white p-0">Delete Category</h2>
            </div>
        </div>
    </div>
    
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="Id" hidden />

            <div class="border p-3 ">
                
                <!--here we dont have any validation because we are deleting-->


                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" disabled class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-0 pl-0"></label>
                    
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" disabled class="form-control border-0 shadow" />
                    <label asp-for="DisplayOrder" class="ms-0 pl-0"></label>
                </div>

                <div class="row pt-4">
                    <div class="col-6 col-md-3 p-1">
                        <button type="submit" class="btn btn-primary form-control">Delete</button>

                    </div>
                    <div class="col-6 col-md-3 p-1">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary border form-control">Back to list</a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>


